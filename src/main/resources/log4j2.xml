<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <Null name="DoNothing"/>

        <File name="DefaultFile" fileName="static-analyzer.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <Routing name="GlobalFileRouter">
            <Routes pattern="$${ctx:logFile}">
                <Route ref="DoNothing" key="none"/>

                <Route ref="DefaultFile" key="$${ctx:logFile}"/>

                <Route>
                    <File name="CustomFile-${ctx:logFile}" fileName="${ctx:logFile}">
                        <PatternLayout>
                            <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
                        </PatternLayout>
                    </File>
                </Route>
            </Routes>
        </Routing>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="GlobalFileRouter"/>
        </Root>
    </Loggers>
</Configuration>