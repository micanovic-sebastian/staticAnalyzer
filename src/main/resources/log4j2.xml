<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <Null name="DoNothing"/>

        <Routing name="FileRouter">
            <Routes pattern="$${ctx:scanTarget}">

                <Route ref="DoNothing" key="NONE"/>

                <Route>
                    <FileAppender name="File-${ctx:scanTarget}" fileName="c:/users/basti/documents/logs/${ctx:scanTarget}-${date:yyyy-MM-dd}.log">
                        <PatternLayout>
                            <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
                        </PatternLayout>
                    </FileAppender>
                </Route>
            </Routes>
        </Routing>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileRouter"/>
        </Root>
    </Loggers>
</Configuration>